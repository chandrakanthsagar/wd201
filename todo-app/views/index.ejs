<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="./css/styles.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-do-Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
<script>
    function updateTodo(id){
        fetch(`{/todos/${id}/markAscompleted`,{
            method :"put",
            headers :{"Content-Type": "application/json"},
        })
        .then((res) =>{
            window.location.reload();
        })
        .catch((err)=>console.error(err));
    }
</script>
</head>
<body>
    
    <div class="grid grid-cols-6">
        <div class=" col-start-3 col-span-3 ">
            <%- include('header.ejs') %>
            <form action="/todos" method="post">
                <div class="flex gap-2 py-4"> 
                    <div class="flex-auto">
                        <input type="text" name="title" placeholder="what's next?"class="border border-gray-300 rounded text-gray-900 w-full p-2 text-sm" required>
                    </div>
                    <div class="flex-auto">
                        <input type="date" name="dueDate" class="border border-gray-300 rounded text-gray-900 w-full p-2 text-sm"/>
                    </div>
                
                    <div class="flex-none">
                    <button type="submit" class="bg-green-600 text-white px-5 py-2 rounded">Add</button>
                    </div>    
                
                </div>
                
            </form>
            <div>
                <%- include('todos.ejs',{title:"Overdue",data :overdue}) %>
                <%- include('todos.ejs',{title:"Due Today",data:dueToday}) %>
                <%- include('todos.ejs',{title:"Due Later",data:dueLater}) %>
            </div>
 
        </div>
    </div>
</body>
</html>
 